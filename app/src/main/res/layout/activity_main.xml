<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">


    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="Numero Matricola"
            android:ems="10"
            android:id="@+id/id_Nome" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.429"
            android:drawableLeft="@drawable/ic_person_black_24dp"/>

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:hint="Password"
            android:ems="10"
            android:drawableLeft="@drawable/ic_lock_outline_black_24dp"
            android:id="@+id/id_Password" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintVertical_bias="0.018" app:layout_constraintTop_toBottomOf="@+id/id_Nome"/>
    <Button
            android:text="Login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/id_Login" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/id_Password"
            app:layout_constraintHorizontal_bias="0.498" app:layout_constraintVertical_bias="0.067"/>
    <TextView
            android:text="Inserisci le tue credenziali"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/id_Info" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/id_Login" app:layout_constraintVertical_bias="0.121"/>

    <ImageView android:layout_width="match_parent"
               android:layout_height="147dp"
               app:srcCompat="@drawable/uniparthenope" android:layout_alignParentEnd="true"
               android:layout_alignParentStart="true"
               android:layout_marginBottom="8dp"
               android:layout_alignParentBottom="true" app:layout_constraintBottom_toBottomOf="parent"
               android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
               tools:layout_editor_absoluteX="16dp" app:layout_constraintVertical_bias="0.093"/>

</android.support.constraint.ConstraintLayout>